<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- window action -->
        <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->
        <record model="ir.actions.act_window" id="tagesbericht_list_action">
            <field name="name">Tagesbericht</field>
            <field name="res_model">wochenbericht.tagesbericht</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Bitte erst mal was anlegen tuan !
                </p>
            </field>
        </record>

        <!-- top level menu: no parent -->
        <menuitem id="main_openacademy_menu" name="Wochenbericht"/>
        <!-- A first level in the left side menu is needed
             before using action= attribute -->
        <menuitem id="openacademy_menu" name="Wochenbericht"
                  parent="main_openacademy_menu"/>
        <!-- the following menuitem should appear *after*
             its parent openacademy_menu and *after* its
             action tagesbericht_list_action -->
        <menuitem id="courses_menu" name="Tagesbericht" parent="openacademy_menu"
                  action="tagesbericht_list_action"/>
        <!-- Full id location:
             action="openacademy.tagesbericht_list_action"
             It is not required when it is the same module -->
    </data>
</openerp>